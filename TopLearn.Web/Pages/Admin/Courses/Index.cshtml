@page
@model TopLearn.Web.Pages.Admin.Courses.IndexModel
@{
    ViewData["Title"] = "دوره ها";
}

<div class="clearfix">
    <br />
    <br />
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره های تاپ لرن
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <form>
                                <div class="col-sm-12 col-md-3">
                                    <input type="text" class="form-control" name="FilterCourseName" placeholder="نام دوره" />
                                </div>
                                <div class="col-sm-12 col-md-3">
                                    <button type="submit" class="btn btn-info"> بگرد </button>
                                </div>
                                <div class="col-sm-12 col-md-3">
                                    <a href="/Admin/Users" class="btn btn-default"> خالی کن </a>
                                </div>
                                <div class="col-sm-12 col-md-3">
                                    <a asp-page="CreateCourse" class="btn btn-success"> افزودن دوره </a>
                                </div>
                            </form>
                        </div>
                        <br />
                        <div class="clearfix"></div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th class="text-center">نام دوره</th>
                                    <th class="text-center">تصویر</th>
                                    <th class="text-center">تعداد فصل های دوره</th>
                                    <th> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in Model.CourseList.Course)
                                {
                                    <tr>
                                        <td class="text-center">@course.CourseTitle</td>
                                        <td class="text-center">
                                            <img src="/CourseImages/Thumb/@course.ImageName" class="img-thumbnail img-responsive" />
                                        </td>
                                        <td class="text-center">@course.EpisodeCount</td>
                                        <td class="text-center">
                                            <a href="/Admin/Courses/EditCourse/@course.CourseId" class="btn-sm btn-warning">ویرایش</a>
                                            <a href="/Admin/Courses/IndexEpisode/@course.CourseId" class="btn-sm btn-primary">فصل های دوره</a>
                                            <a href="/Admin/Courses/Comments/@course.CourseId" class="btn-sm btn-info">نظرات کاربران</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">

                                        @for (int i = 1; i <= Model.CourseList.PageCount; i++)
                                        {
                                            <li class="paginate_button @((i==Model.CourseList.CurrentPage?"active":""))" aria-controls="dataTables-example" tabindex="0">
                                                <a href="/Admin/Courses?PageId=@i"> @i </a>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
@page "{id}"
@model TopLearn.Web.Pages.Admin.Courses.IndexEpisodeModel
@{
    ViewData["Title"] = "فصل های دوره";
}

<div class="clearfix">
    <br />
    <br />
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست فصل های @ViewData["CourseTitle"]
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <form>
                                <div class="col-sm-12 col-md-3">
                                    <input type="text" class="form-control" name="filterEpisode" placeholder="نام فصل" />
                                </div>
                                <div class="col-sm-12 col-md-3">
                                    <button type="submit" class="btn btn-info"> بگرد </button>
                                </div>
                                <div class="col-sm-12 col-md-3">
                                    <a href="/Admin/Courses/IndexEpisode/@ViewData["CourseId"]" class="btn btn-default"> خالی کن </a>
                                </div>
                                <div class="col-sm-12 col-md-3">
                                    <a asp-page="CreateEpisode" asp-route-id="@ViewData["CourseId"].ToString()" class="btn btn-success"> افزودن فصل </a>
                                </div>
                            </form>
                        </div>
                        <br />
                        <div class="clearfix"></div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th class="text-center">نام فصل</th>
                                    <th> زمان فصل </th>
                                    <th> ویدیو فصل </th>
                                    <th> وضعیت </th>
                                    <th>  </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var episode in Model.courseEpisode)
                                {
                                    <tr>
                                        <td class="text-center">@episode.EpisodeTitle</td>
                                        <td class="text-center">@episode.EpisodeTime</td>
                                        <td class="text-center col-md-3">
                                           <a href="/ShowCourse/@episode.Course.CourseId">@episode.EpisodeTitle</a>
                                        </td>

                                        <td class="text-center">
                                            @if (episode.IsFree)
                                            {
                                                <p class="text-info">
                                                    رایگان
                                                </p>
                                            }
                                            else
                                            {
                                                <p class="text-info">
                                                    قابل مشاهده برای دانشجویان
                                                </p>
                                            }
                                        </td>

                                        <td class="text-center">
                                            <a href="/Admin/Courses/EditCourseEpisode/@episode.EpisodeId" class="btn-sm btn-warning">ویرایش</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
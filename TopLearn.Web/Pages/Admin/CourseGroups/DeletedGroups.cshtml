@page
@model TopLearn.Web.Pages.Admin.CourseGroups.DeletedGroupsModel
@{
    ViewData["Title"] = "گروه های حذف شده";
}



<div class="clearfix">
    <br />
    <br />
</div>

<a class="btn btn-success" asp-page="CreateRole"> <span class="glyphicon glyphicon-plus"></span> افزودن نقش</a>

<div class="clearfix">
    <br />
    <br />
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
               گروه های حذف شده
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th class="text-center">گروه</th>
                                    <th class="text-center"> دستورات </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var group in Model.Groups)
                                {
                                    <tr>
                                        <td class="text-center">@group.GroupTitle</td>

                                        <td class="text-center">
                                            <a href="/Admin/CourseGroups/Recovery/@group.GroupId" class="btn-sm btn-primary">بازگردانی</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table><div class="row">
                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
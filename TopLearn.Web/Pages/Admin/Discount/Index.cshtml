@page
@using TopLearn.Core.Convertors;
@model TopLearn.Web.Pages.Admin.Discount.IndexModel
@{
    ViewData["Title"] = "کد های تخفیف";
}

<div class="clearfix">
    <br />
    <br />
</div>
<div class="container">
    <a class="btn btn-success" href="/Admin/Discount/Create"> <span class="glyphicon glyphicon-plus"></span> افزودن کد تخفیف</a>
    <a class="btn btn-danger" asp-page="Deleted"> <span class="glyphicon glyphicon-trash"></span> کد های تخفیف حذف شده</a>
</div>

<div class="clearfix">
    <br />
    <br />
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست کد های تخفیف
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th class="text-center">کد تخفیف</th>
                                    <th class="text-center"> درصد تخفیف </th>
                                    <th class="text-center"> تعداد قابل استفاده </th>
                                    <th class="text-center"> تاریخ شروع </th>
                                    <th class="text-center"> تاریخ پایان </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var discount in Model.DiscountViewModel.Discount)
                                {
                                    <tr>
                                        <td class="text-center">@discount.DiscountCode</td>
                                        <td class="text-center">@discount.DiscountPersent</td>
                                        <td class="text-center">@discount.UsableCount</td>
                                        <td class="text-center">@discount.StartDate?.ToShamsi()</td>
                                        <td class="text-center">@discount.EndDate?.ToShamsi()</td>


                                        <td class="text-center">
                                            <a href="/Admin/Discount/Edit/@discount.DiscountId" class="btn-sm btn-warning">ویرایش</a>
                                            <a href="/Admin/Discount/Delete/@discount.DiscountId" class="btn-sm btn-danger">حذف</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table><div class="row">
                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


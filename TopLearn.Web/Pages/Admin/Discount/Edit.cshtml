@page "{id}"
@model TopLearn.Web.Pages.Admin.Discount.EditModel
@{
    ViewData["Title"] = "ویرایش کد تخفیف";
}

<div class="clearfix">
    <br />
</div>
<form method="post">

    <input type="hidden" asp-for="Discount.DiscountId" />

    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    ( ویرایش کد تخفیف )
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label asp-for="Discount.DiscountCode"></label>
                        <input class="form-control" asp-for="Discount.DiscountCode" placeholder="کد تخفیف را وارد کنید">
                    </div>
                    <div class="form-group">
                        <label asp-for="Discount.DiscountPersent"></label>
                        <input class="form-control" asp-for="Discount.DiscountPersent" placeholder="درصد کد تخفیف را وارد کنید">
                    </div>
                    <div class="form-group">
                        <label asp-for="Discount.UsableCount"></label>
                        <input class="form-control" asp-for="Discount.UsableCount" placeholder="تعداد کد تخفیف را وارد کنید">
                    </div>
                    <button type="submit" class="btn-outline btn-primary btn btn-block">ویرایش کد تخفیف</button>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading text-center">
                    ( تعیین مهلت استفاده کد تخفیف )
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label asp-for="Discount.StartDate"></label>
                        <input asp-for="Discount.StartDate" type="text" id="startDate" name="startDate" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Discount.EndDate"></label>
                        <input asp-for="Discount.StartDate" type="text" id="endDate" name="endDate" />
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_KendoDatePickerRefrences"></partial>
}
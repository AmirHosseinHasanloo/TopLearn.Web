@model TopLearn.Core.DTOs.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"> تغییر رمز عبور </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    @if (ViewBag.IsSuccess != null)
                    {
                        <div class="alert alert-success">
                            <p class="help-block"> رمز عبور شما با موفقیت تغییر کرد. </p>
                        </div>

                        <script src="js/Login.js"></script>
                    }
                    <section class="user-account-content">
                        <header>
                            <h1> تغییر رمز عبور </h1>
                        </header>
                        <div class="inner form-layer">
                            <form asp-action="ChangePassword" method="post">
                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi zmdi-lock"></i></span>
                                            <input asp-for="OldPassword" type="text" class="form-control" placeholder="رمز عبور فعلی" aria-describedby="username">
                                        </div>
                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi zmdi-lock"></i></span>
                                            <input asp-for="Password" type="text" class="form-control" placeholder="رمز عبور جدید" aria-describedby="username">
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi zmdi-lock"></i></span>
                                            <input asp-for="RePassword" type="text" class="form-control" placeholder="تکرار رمز عبور جدید" aria-describedby="username">
                                        </div>
                                        <span asp-validation-for="RePassword" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <input type="submit" class="btn btn-success" value=" ذخیره تغییرات "/>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

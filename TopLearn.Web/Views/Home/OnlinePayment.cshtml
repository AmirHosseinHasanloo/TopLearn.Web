@{
    ViewData["Title"] = "نتیجه پرداخت";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"> نتیجه پرداخت </li>
        </ul>
    </nav>
</div>

<div class="container col-md-12 col-xs-12 col-sm-12 col-12 col-xl-12">
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success text-center">
            <h2> پرداخت با موفقیت انجام شد. </h2>
            <p>
                کد پیگیری : @ViewBag.Code
            </p>
        </div>
    }
    else
    {
        <div class="alert alert-danger text-center">
            <h2> پرداخت با موفقیت انجام نشد. </h2>
        </div>
    }
</div>

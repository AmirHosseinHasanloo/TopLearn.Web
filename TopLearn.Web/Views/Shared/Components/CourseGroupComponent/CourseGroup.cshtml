@model IEnumerable<TopLearn.DataLayer.Entities.Course.CourseGroup>
@{
    Layout = null;
}
<!-- main manu -->
<div class="main-menu">
    <div class="container">
        <nav>
            <span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
            <ul>
                @foreach (var courseGroup in Model.Where(g => g.ParentId == null))
                {
                    <li>
                        <a href="/Course/FilterCourse?selectedGroups=@courseGroup.GroupId"> @courseGroup.GroupTitle </a>
                        @if (Model.Any(g => g.ParentId == courseGroup.GroupId))
                        {
                            <ul>
                                @foreach (var subGroup in Model.Where(g => g.ParentId == courseGroup.GroupId))
                                {
                                    <li><a href="/Course/FilterCourse?selectedGroups=@subGroup.GroupId"> @subGroup.GroupTitle </a></li>
                                }
                            </ul>
                        }
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
<!-- /main manu -->